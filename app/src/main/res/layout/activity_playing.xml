<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mkenlo.koramusic.PlayingActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_music_player_pink"
        android:background="@color/colorPrimary"
        android:padding="24dp"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="4"
        android:progress="1"
        android:layout_weight="0.5"
        android:padding="@dimen/spacing_medium"    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pharell Williams"
        android:textAlignment="center"
        android:padding="@dimen/spacing_medium" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.57"
        android:layout_marginTop="@dimen/spacing_medium"
        android:padding="@dimen/spacing_medium">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_previous_pink"
            android:layout_weight="1"
            android:background="@color/colorPrimaryLight"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_arrow_pink"
            android:layout_weight="1"
            android:background="@color/colorPrimaryLight"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_next_pink"
            android:layout_weight="1"
            android:background="@color/colorPrimaryLight"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_playing_desc"
        android:layout_weight="1"
        android:padding="@dimen/spacing_small"/>


</LinearLayout>
